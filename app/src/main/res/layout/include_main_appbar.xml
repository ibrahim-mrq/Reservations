<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimaryDark"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/includeMainAppbar_rLayout_welcome"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="20dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/includeMainAppbar_img_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_user"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/includeMainAppbar_tv_welcome1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/includeMainAppbar_img_user"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="-7dp"
                android:layout_toEndOf="@+id/includeMainAppbar_img_user"
                android:text="@string/welcome"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/includeMainAppbar_tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/includeMainAppbar_tv_welcome1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="-5dp"
                android:layout_toEndOf="@+id/includeMainAppbar_img_user"
                android:text="Mr/Mrs"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>